<% if @comment -%>
<% @comment.split("\n").each do |line| -%>
<%= line.strip %>
<% end -%>
<% end -%>
path <%= @path %>
<% if @auth -%>
auth <%= @auth %>
<% end -%>
<% if @method -%>
method <%= @method %>
<% end -%>
<% if @allow -%>
<%- if @allow.is_a? Array -%>
<%- @allow.each do |value| -%>
allow <%= value %>
<%- end -%>
<%- else -%>
allow <%= @allow %>
<% end %>
<% end %>